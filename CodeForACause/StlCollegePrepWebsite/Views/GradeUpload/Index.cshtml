@{
    ViewBag.Title = "GradeUpload";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "GradeUpload", FormMethod.Post,
            new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Student</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <label for="year">Year</label>
    <!--Grab Value for controller-->
    <input type="text" name="year"><br><br>

    <label for="semester">Semester</label>
    <select name="semester">
        <option disabled selected value> -- select an option -- </option>
        <option value="Fall">Fall</option>
        <option value="Spring">Spring</option>
        <option value="Summer">Summer</option>
    </select><br><br>

    <label for="csv">CSV File</label>
    <input type="text" name="fileName" value="csvFile" readonly>
    <input type="file" name="postedFile"><br />

    <button type="submit">Upload</button>
</div>

    <br>

    <table class="table">
        <tr>
            <th>
                Student Last Name
            </th>
            <th>
                Student First Name
            </th>
            <th>
                Student Number
            </th>
            <th>
                Class Description
            </th>
            <th>
                Grading Period Description
            </th>
            <th>
                Final Grade
            </th>
            <th></th>
        </tr>

        <tr>
            <td>
                students.LastName
            </td>
            <td>
                students.FirstName
            </td>
            <td>
                students.StudentNumber
            </td>
            <td>
                courseStudents.ClassDescription
            </td>
            <td>
                period.Semester
            </td>
            <td>
                courseStudents.AwardedGrade
            </td>
        </tr>
    </table>
}